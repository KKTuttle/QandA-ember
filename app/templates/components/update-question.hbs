{{#if updateQuestionForm}}
  <h4>Update Question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="user">Author</label>
        {{input value=user id="user" placeholder=question.user}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <button type="button" class="btn btn-default" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-default" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
