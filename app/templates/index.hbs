<hr>
<ul>
  {{#each model as |question|}}
    <li>
      {{question-popularity question}}
      {{#link-to 'question' question.id}}
      Question: {{question.content}}
      Author: {{question.user}}
      {{/link-to}}
      {{update-question question=question update="update"}}
      <button class="btn btn-default" {{action 'addToFav' question}}><span class="glyphicon glyphicon-heart"></span> </button>
    </li>
    <hr>
  {{/each}}
</ul>

{{new-question saveQuestion="saveQuestion"}}
