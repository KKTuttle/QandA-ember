{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="user">User</label>
        {{input value=user id="user" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="notes">Details</label>
        {{input value=notes id="notes" class="form-control"}}
      </div>


      <button type="button" class="btn btn-default" {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-default" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
