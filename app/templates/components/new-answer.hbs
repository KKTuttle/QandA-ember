{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="reply">Answer</label>
        {{input value=reply id="reply" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="visitor">Your Name</label>
        {{input value=visitor id="visitor" class="form-control"}}
      </div>


      <button type="button" class="btn btn-default" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-default" {{action 'answerFormShow'}}>New Answer</button>
  {{/if}}
